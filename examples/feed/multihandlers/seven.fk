-- exiting.
schedule _ _ unit _ _ = print "\n*-User exits.\n"
schedule _ _ _ unit _ = print "\n*-Client exits.\n"
schedule _ _ _ _ unit = print "\n*-Server exits.\n"


main : {[E | Console, RefState]Unit}
