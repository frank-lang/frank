--- Scheduler
--------------
schedule : {Maybe (List Int) ->                              -- Data from Server -> Client
           (Maybe {List Int -> [Console, RefState]Unit}) -> -- thunk for writing new data to client
           <Next>Unit ->                                     -- User
           <Idle, Collect, Request>Unit ->               -- Client
           <NewData, IdleServer, BatchSizeResponse> Unit ->  -- Server
           [Console, RefState]Unit}

-- user requesting more data to be displayed
schedule d th <next -> user> <idle -> client>    <server> =
         schedule d th (user unit) (client unit) server!

-- client requesting more data
schedule d _ <user>         <request (pair n thunk) -> client> <idleServer -> server> =
         schedule d (just thunk) user! (client unit) (server (dataReq n))

-- taking data from server and storing temporarily
schedule d (just updateThunk) <user>         <client> <newData strs -> server> =
         updateThunk strs;
         schedule nothing nothing user! client! (server unit)


-- picking up data from the store
schedule nothing th <user>   <collect -> client> <server> =
         schedule nothing th user! (client nothing) server!

